# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_RATE_LIMIT=100  # Requests per minute (5 for free tier, 100+ for paid)

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stock_screener
DATABASE_POOL_MIN_SIZE=10
DATABASE_POOL_MAX_SIZE=20
DATABASE_COMMAND_TIMEOUT=60.0

# Data Collection Settings
DATA_COLLECTION_BATCH_SIZE=1000
DATA_COLLECTION_MAX_CONCURRENT=50
DATA_COLLECTION_RETRY_ATTEMPTS=3
DATA_COLLECTION_RETRY_DELAY=1.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Gap Calculation Settings
ENABLE_ASYNC_GAP_CALCULATION=true
PREVIOUS_DAY_CACHE_TTL=86400
MAX_PREVIOUS_DAY_LOOKBACK=10
